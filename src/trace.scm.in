;; -*- Mode: Scheme -*-

(module trace
        (include "utility.macros")
        (import xformat)
        (export (trace/enable! kind)
                (trace/disable! kind)
                (trace/store kind msg . args)
                (trace/with-output-to thunk))
        (eval (export-exports)))

(define *trace-output-port* (compile-if 
                             @BIGLOO_TRACE@
                             (open-output-file ".salenv-trace")
                             (current-output-port)))

(define (trace/enable! kind)
  (putprop! kind 'trace-enabled #t))

(define (trace/disable! kind)
  (remprop! kind 'trace-enabled))

(define (trace/store kind msg . args)
  (unless *trace-output-port*
    (error 'trace "The program was not compiled with trace information." #unspecified))
  (apply xformat (cons* *trace-output-port* (string-append "[" (symbol->string kind) "] " msg "~%") args))
  (flush-output-port *trace-output-port*))

(define (trace/with-output-to thunk)
  (unless *trace-output-port*
    (error 'trace "The program was not compiled with trace information." #unspecified))
  (with-output-to-port *trace-output-port* thunk)
  (flush-output-port *trace-output-port*))
