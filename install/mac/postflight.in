destination=$2
saldir="$destination/SAL.app/Contents/Resources/sal"
DOT_A_LIBS="@DOT_A_LIB_NAMES@"

gen_script()
{
	template=$saldir/src/$1.template
	script=$saldir/bin/$1
  if sed -e "s|__SALENV_DIR__|$saldir|g;s|__BIGLOO_LIB_DIR__|$saldir/lib|g;s|__DOT_A_LIBS__|$DOT_A_LIBS|g" $template > $script
  then
		chmod +x $script
	else
     echo "Error: generating script $script" 1>&2
		 exit 1
  fi
}

for name in @sal_scripts@; do gen_script $name; done

